<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_color">

    <PreferenceCategory
        android:key="theme_category"
        android:title="Theme">

        <ListPreference
            android:defaultValue="2"
            android:entries="@array/theme_names_array"
            android:entryValues="@array/theme_values_array"
            android:icon="@drawable/ic_color_lens"
            android:key="theme"
            android:title="@string/preference_theme_title"
            android:textColor="@color/text_color"
            android:summary="%s"/>

        <ListPreference
            android:defaultValue="mi"
            android:entries="@array/distance_unit_entries"
            android:entryValues="@array/distance_unit_values"
            android:key="dunit"
            android:title="Distance Unit"
            android:textColor="@color/text_color"/>


    </PreferenceCategory>

